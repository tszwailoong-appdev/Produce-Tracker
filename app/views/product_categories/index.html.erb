<div>
  <div>
    <h1>
      List of all product categories
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new product category
    </h2>

    <form action="/insert_product_category" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create product category
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_product_categories.each do |a_product_category| %>
      <tr>
        <td>
          <%= a_product_category.id %>
        </td>

        <td>
          <%= a_product_category.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_product_category.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_product_category.updated_at) %> ago
        </td>

        <td>
          <a href="/product_categories/<%= a_product_category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
