<div>
  <div>
    <h1>
      Product category #<%= @the_product_category.id %> details
    </h1>

    <div>
      <div>
        <a href="/product_categories">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_product_category/<%= @the_product_category.id %>">
          Delete product category
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_product_category.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_product_category.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_product_category.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit product category
    </h2>

    <form action="/modify_product_category/<%= @the_product_category.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_product_category.name %>">
      </div>

      <button>
        Update product category
      </button>
    </form>
  </div>
</div>

<hr>
