<div>
  <div>
    <h1>
      List of all products
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new product
    </h2>

    <form action="/insert_product" method="post">
      <div>
        <label for="farm_id_box">
          Farm
        </label>

        <input type="text" id="farm_id_box" name="query_farm_id">
      </div>

      <div>
        <label for="product_category_id_box">
          Product category
        </label>

        <input type="text" id="product_category_id_box" name="query_product_category_id">
      </div>

      <div>
        <label for="units_in_stock_box">
          Units in stock
        </label>

        <input type="text" id="units_in_stock_box" name="query_units_in_stock">
      </div>

      <div>
        <label for="photo_box">
          Photo
        </label>

        <input type="text" id="photo_box" name="query_photo">
      </div>

      <button>
        Create product
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Farm
        </th>

        <th>
          Product category
        </th>

        <th>
          Units in stock
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_products.each do |a_product| %>
      <tr>
        <td>
          <%= a_product.id %>
        </td>

        <td>
          <%= a_product.farm_id %>
        </td>

        <td>
          <%= a_product.product_category_id %>
        </td>

        <td>
          <%= a_product.units_in_stock %>
        </td>

        <td>
          <%= a_product.photo %>
        </td>

        <td>
          <%= time_ago_in_words(a_product.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_product.updated_at) %> ago
        </td>

        <td>
          <a href="/products/<%= a_product.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
